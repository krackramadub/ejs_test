            <div class="header-post">
                <div class="post-avatar-img">
                  <img src="<%= post[i].avatar %>" alt="" />
                </div>
                <div class="author-name">
                  <p href="#3"><%= post[i].author %></p>
                </div>
                
            </div>
            <div class="title-post">
              <h4><%= post[i].title %></h4>
            </div>
            <div class="content-post">
                <%- post[i].content %>
            </div>
          </div>
        </a>
    <% } %>
