<div class="container">
  <div class="head_text">Trending today</div>
  <div class="thrend">
    <% for(var i=0; i<trend.length; i++) {%>
        <div class="col-xs-6 col-md-3 trend_container">
          <a href="#" class="trend_block">
            <div style="background: rgb(255, 255, 255) url('<%= trend[i].img %>') no-repeat scroll center center / cover;">
              <div class="text_on_trend_block">
                <h2 class="trend_h2"> <%= trend[i].title%> </h2>
                <div class="split_text_on_trend">
                  <%= trend[i].small %>
                </div>
              </div>
            </div>
          </a>
        </div>
    <% } %>
  </div>
</div>
